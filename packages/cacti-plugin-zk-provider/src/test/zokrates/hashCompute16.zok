def main(private u16[3] inputs) -> u32[8] {
    u8[6] mut input_bytes = [0; 6];
    for u32 i in 0.. 3 {
        u8[2] part = cast(inputs[i]);
        input_bytes[i*2] = part[0];
        input_bytes[i*2 + 1] = part[1];
    }
    return sha256(input_bytes);
}