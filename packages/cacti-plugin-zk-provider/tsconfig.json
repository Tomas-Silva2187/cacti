{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist/lib/",
    "declarationDir": "dist/lib",
    "allowJs": false,
    "rootDir": "./src/",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "skipLibCheck": true,
    "noImplicitAny": false
  },
  "ts-node": {
    "files": true
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules"
  ]
}
